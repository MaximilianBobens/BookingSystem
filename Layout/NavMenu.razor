<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid navbar-dark">
        <a class="navbar-brand" href="">Booking System</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable navbar-dark" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link navbar-dark" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu navbar-dark" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link navbar-dark" href="/booking" Match="NavLinkMatch.All">
                <span href="/booking" class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Book
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link navbar-dark" href="/booking" Match="NavLinkMatch.All">
                <span href="/YourBookings" class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Bookings
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}